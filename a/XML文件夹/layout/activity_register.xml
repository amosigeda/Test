<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_list">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/text_register"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/phoneNumberLineLL"
        android:layout_width="@dimen/dp_224"
        android:layout_height="@dimen/dp_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_200"
        android:background="@color/color_ffffff"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/phoneNumberEdt"
        android:layout_width="@dimen/dp_224"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phoneNumberLineLL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@null"
        android:hint="@string/text_enter_phone_num"
        android:inputType="phone"
        android:paddingLeft="@dimen/dp_16"
        android:singleLine="true"
        android:textColor="@color/color_ffffff"
        android:textColorHint="@color/color_40percent_ffffff"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/codeLineLL"
        android:layout_width="@dimen/dp_224"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/phoneNumberLineLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/color_ffffff"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="@dimen/dp_224"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/codeLineLL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_12">

        <Button
            android:id="@+id/getCodeTV"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_get_code"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="@color/color_1f82d0"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/codeEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toLeftOf="@id/getCodeTV"
            android:background="@null"
            android:hint="@string/text_enter_code"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_40percent_ffffff"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/codeLineLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/btn_little_large"
        android:gravity="center"
        android:text="@string/text_register"
        android:textColor="@color/color_1f82d0"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tipTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_also_has_account"
            android:textColor="@color/color_40percent_ffffff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tipTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/tipTV1"
            android:text="@string/text_login"
            android:textColor="@color/color_40percent_ffffff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</RelativeLayout>