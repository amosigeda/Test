<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_list">

    <com.lewic.bracelet.widget.BackTitle
        android:id="@+id/titleRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title1="@string/text_device_manager" />

    <RelativeLayout
        android:id="@+id/deviceRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_94"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_me_item_bg"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_16"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/tv_device_time"
            android:layout_below="@id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/tv_device_state"
            android:layout_below="@id/tv_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_device_icon"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_94"
            android:layout_alignParentRight="true"
            android:src="@drawable/device_bracelet"/>

        <TextView
            android:id="@+id/bindTV"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_22"
            android:gravity="center"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>
</RelativeLayout>
