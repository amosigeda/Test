<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_list">

    <com.lewic.bracelet.widget.BackTitle
        android:id="@+id/titleRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title1="@string/text_msg_detail" />

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_below="@+id/titleRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_location_detail_time_bg"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"/>

</RelativeLayout>
