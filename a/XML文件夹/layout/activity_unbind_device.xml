<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_list">

    <com.lewic.bracelet.widget.BackTitle
        android:id="@+id/titleRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title1="@string/text_device_manager"/>

    <ImageView
        android:id="@+id/iv_warn"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_warn"/>

    <TextView
        android:id="@+id/tv_sure_unbind_tip"
        android:layout_below="@id/iv_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_46"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_24"
        android:text="@string/text_sure_unbind_tip"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_unbind_tip"
        android:layout_below="@id/tv_sure_unbind_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_14"
        android:text="@string/text_unbind_tip"
        android:layout_marginLeft="@dimen/dp_44"
        android:lineSpacingExtra="@dimen/dp_12"/>

    <Button
        android:id="@+id/unBindBtn"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/tv_unbind_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_52"
        android:background="@drawable/btn_little_large"
        android:gravity="center"
        android:text="@string/text_sure"
        android:textColor="@color/color_1f82d0"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unBindBtn"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/text_cancel"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
