<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_240"
        android:background="@drawable/sos_background">

        <TextView
            android:id="@+id/sosTV"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS"/>

        <TextView
            android:id="@+id/sosTimeTV"
            android:layout_below="@id/sosTV"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/sos_close"/>

        <Button
            android:id="@+id/locationBtn"
            android:layout_width="@dimen/dp_94"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/button_view_location"
            android:gravity="center"
            android:text="@string/text_view_location"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14"/>

        <Button
            android:id="@+id/navigateBtn"
            android:layout_width="@dimen/dp_94"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/locationBtn"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/sos_button_background"
            android:gravity="center"
            android:text="@string/text_daohang"
            android:textColor="@color/color_f25b6e"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>
</RelativeLayout>