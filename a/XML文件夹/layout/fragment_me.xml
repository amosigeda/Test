<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="@string/text_bottom_four"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16"
        
        />

    <TextView
        android:id="@+id/tv_me_infomation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_me_infomation"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_device_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@id/tv_me_infomation"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_device_manager"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_find_bracelet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@id/tv_device_manager"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_find_bracelet"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_whitelist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@id/tv_find_bracelet"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_whitelist"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_customer_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@id/tv_whitelist"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_customer_feedback"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_customer_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@id/tv_customer_feedback"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_me_item_bg"
        android:text="@string/text_customer_service"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        />
</RelativeLayout>
