<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_list">

    <com.lewic.bracelet.widget.BackTitle
        android:id="@+id/titleRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title1="@string/text_welcome"
        app:backRLVisibility="false"/>
    <RelativeLayout
        android:id="@+id/rl_bind"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_welcome_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_133"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24"
            android:text="@string/text_welcome_use"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_please_bind"
            android:layout_below="@id/tv_welcome_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24"
            android:text="@string/text_please_bind"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_bind_step1"
            android:layout_below="@id/tv_please_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14"
            android:text="@string/text_bind_step1"
            android:layout_alignLeft="@id/tv_please_bind"/>

        <TextView
            android:id="@+id/tv_bind_step2"
            android:layout_below="@id/tv_bind_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14"
            android:text="@string/text_bind_step2"
            android:layout_alignLeft="@id/tv_please_bind"/>

        <TextView
            android:id="@+id/tv_bind_step2_failed"
            android:layout_below="@id/tv_bind_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="@string/text_check_input_imei"/>

        <View
            android:id="@+id/bindLineView"
            android:layout_below="@+id/tv_bind_step2"
            android:layout_width="@dimen/dp_244"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_54"
            android:background="@color/color_ffffff" />

        <EditText
            android:id="@+id/bindEdt"
            android:layout_width="@dimen/dp_244"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bindLineView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@null"
            android:hint="@string/text_please_input_imei"
            android:paddingLeft="@dimen/dp_16"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_40percent_ffffff"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/bindBtn"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_42"
            android:layout_below="@id/bindLineView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_76"
            android:background="@drawable/btn_little_large"
            android:gravity="center"
            android:text="@string/text_start_bind"
            android:textColor="@color/color_1f82d0"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_not_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bindBtn"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/text_not_bind"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bind_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_142"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_bind_success"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:src="@drawable/img_bind_success"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_below="@id/iv_bind_success"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24"
            android:text="@string/text_bind_success"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
