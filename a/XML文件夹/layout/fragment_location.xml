<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:clickable="true" />-->

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_location_detail_time_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

             <Button
                 android:id="@+id/realtimeLocationBtn"
                 android:layout_width="@dimen/dp_75"
                 android:layout_height="@dimen/dp_24"
                 android:background="@drawable/selector_location_btn"
                 android:gravity="center"
                 android:text="@string/text_realtime_location"
                 android:textColor="@color/color_location_btn"
                 android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneHourHistoryLocationBtn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/selector_location_btn"
                android:gravity="center"
                android:text="@string/text_one_hour_history_location"
                android:textColor="@color/color_location_btn"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneDayHistoryLocationBtn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/selector_location_btn"
                android:gravity="center"
                android:text="@string/text_one_day_history_location"
                android:textColor="@color/color_location_btn"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/refreshIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/refresh"/>

    <LinearLayout
        android:id="@+id/timeLL"
        android:layout_width="@dimen/dp_194"
        android:layout_height="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_location_detail_time_bg"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_1f82d0"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"/>
        <TextView
            android:id="@+id/stepCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_1f82d0"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_9"/>
        </LinearLayout>

</RelativeLayout>
