<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/text_bottom_one"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:id="@+id/pulseRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/text_pulse"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/pulseTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_66"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pulseTV"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/pulseTV"
            android:text="@string/text_bpm"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_140"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/card_pulse" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bloodpressureRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/text_blood_pressure"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/bloodPressureTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_66"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bloodPressureTV"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/bloodPressureTV"
            android:text="@string/text_mmhg"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_140"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/card_bloodpressure" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/locationRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/text_location"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_60"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_140"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/card_position" />

    </RelativeLayout>

</LinearLayout>
