<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pluseIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pluseIV"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8">

        <TextView
            android:id="@+id/pluseTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pluseTV"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/pluseTV"
            android:text="@string/text_bpm"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pluseResultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_16" />

    <Button
        android:id="@+id/startMeasureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/selector_measure_btn"
        android:gravity="center"
        android:text="@string/start_measure_btn"
        android:textColor="@color/color_measure_btn"
        android:textSize="@dimen/sp_12"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/pluse_demo"/>


</LinearLayout>
